FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
      ca-certificates sqlite3 && \
    rm -rf /var/lib/apt/lists/*

RUN useradd -r -u 10002 -s /usr/sbin/nologin infra
WORKDIR /app

COPY InfraSpectre/requirements.txt /app/InfraSpectre/requirements.txt
RUN pip install --no-cache-dir -r /app/InfraSpectre/requirements.txt

COPY InfraSpectre /app/InfraSpectre
COPY proto /app/proto

RUN python -m grpc_tools.protoc -I proto \
    --python_out=InfraSpectre/proto_stubs \
    --grpc_python_out=InfraSpectre/proto_stubs \
    proto/messaging_schema.proto

VOLUME ["/certs", "/wal"]
EXPOSE 9101 8081

USER infra:infra
ENV PYTHONUNBUFFERED=1
ENV IS_WAL_PATH=/wal/wal.db
ENV IS_CERT_DIR=/certs
CMD ["python", "InfraSpectre/agents/flowagent/main.py"]
